<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UI.TestActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="음악 서비스 이용"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="#000000"
    />

    <Button
            android:id="@+id/btn_test_act_music_start"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="음악 서비스 시작"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
    />

    <Button
            android:id="@+id/btn_test_act_music_pause"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="음악 서비스 일시정지"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
    />


    <Button
            android:id="@+id/btn_test_act_music_stop"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="음악 서비스 중지"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
    />

</LinearLayout>