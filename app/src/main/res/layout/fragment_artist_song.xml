<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="아티스트"
        android:textSize="18sp"
        android:fontFamily="@font/noto_sans_kr_bold_hestia"
        android:includeFontPadding="false"
        android:gravity="center"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/img_artistprofile"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day6(데이식스)"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:fontFamily="@font/noto_sans_kr_bold_hestia"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="#ffffff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이 아티스트를 커버한 곡들을 확인해 보세요!"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:fontFamily="@font/noto_sans_kr_regular_hestia"
        android:includeFontPadding="false"
        android:textSize="12sp"
        android:textColor="#616161"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal"
        android:layout_marginTop="36dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="곡"
            android:fontFamily="@font/noto_sans_kr_bold_hestia"
            android:layout_marginLeft="16dp"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:includeFontPadding="false"
            />

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/btn_more"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_search_frag_song"
        android:layout_width="match_parent"
        android:layout_height="458dp"
        android:layout_marginTop="10dp"
        >
    </android.support.v7.widget.RecyclerView>

</LinearLayout>