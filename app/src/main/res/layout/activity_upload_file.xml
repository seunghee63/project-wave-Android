<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="#000000"
        android:layout_height="match_parent" android:layout_width="match_parent">

    <LinearLayout
            android:id="@+id/ll_upload_act_upload_music"
            android:paddingHorizontal="40dp"
            android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView
                android:text="음원"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView
                android:text="음원파일 불러오기"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
            android:id="@+id/ll_upload_act_upload_artwork"
            android:paddingHorizontal="40dp"
            android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView
                android:text="아트워크"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
                android:text="웨이버의 음악과 어울리는 아트워크를 추가 해 주세요"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/iv_upload_file_act_thumb"
                android:layout_width="300dp" android:layout_height="300dp"
                android:src="@drawable/ic_launcher_background"/>
    </LinearLayout>
</LinearLayout>
