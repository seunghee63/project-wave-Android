<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/iv_scoring_player_act_album_cover"
                android:background="@color/colorPrimaryDark"
                android:layout_width="300dp" android:layout_height="300dp"/>

        <SeekBar
                android:layout_margin="24dp"
                android:layout_below="@+id/iv_scoring_player_act_album_cover"
                android:id="@+id/sb_scoring_player_act_seekbar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/sb_scoring_player_act_seekbar"
                android:orientation="horizontal"
                android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button
                    android:id="@+id/btn_scoring_player_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="96dp"
                    android:layout_gravity="center"
                    android:text="start"/>
            <Button
                    android:id="@+id/btn_scoring_player_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="96dp"
                    android:layout_gravity="center"
                    android:text="stop"/>
            <Button
                    android:id="@+id/btn_scoring_player_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="96dp"
                    android:layout_gravity="center"
                    android:text="pause"/>

            <Button
                    android:id="@+id/btn_scoring_player_restart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="96dp"
                    android:layout_gravity="center"
                    android:text="restart"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
